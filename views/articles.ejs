<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle || 'Articles - Ankush Articles' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>

  <!-- Header -->
  <header class="bg-primary text-white p-3">
    <div class="container">
      <nav class="nav justify-content-center">
        <a class="nav-link text-white" href="/">Home</a>
        <a class="nav-link text-white" href="/about">About</a>
        <a class="nav-link text-white" href="/articles">Articles</a>
        <a class="nav-link text-white" href="/categories">Categories</a>
        <a class="nav-link text-white" href="/articles/add">Add Article</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container my-4">
    <h1>Articles</h1>

    <% if (errorMessage) { %>
      <div class="alert alert-danger">
        <%= errorMessage %>
      </div>
    <% } %>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Category</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach(article => { %>
          <tr>
            <!-- Link the title to the individual article page using article.Id -->
            <td><a href="/article/<%= article.Id %>"><%= article.title %></a></td>
            <td><%= article.author %></td>
            <td><%= article.categoryName %></td>
            <td><%= new Date(article.articleDate).toLocaleDateString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <% if (articles.length === 0) { %>
      <p>No articles found.</p>
    <% } %>

  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    <div class="container">
      <p>Ankush Gauro, ********** <a href="mailto:**********">**********</a>. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

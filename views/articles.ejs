<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle || 'Articles - Ankush Articles' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>

  <!-- Header -->
  <header class="bg-primary text-white p-3">
    <div class="container">
      <nav class="nav justify-content-center">
        <a class="nav-link text-white" href="/">Home</a>
        <a class="nav-link text-white" href="/about">About</a>
        <a class="nav-link text-white" href="/articles">Articles</a>
        <a class="nav-link text-white" href="/categories">Categories</a>
        <a class="nav-link text-white" href="/articles/add">Add Article</a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container my-4">
    <h1>Articles</h1>

    <!-- Error Message -->
    <% if (errorMessage) { %>
      <div class="alert alert-danger">
        <%= errorMessage %>
      </div>
    <% } %>

    <!-- Articles Table -->
    <% if (articles && articles.length > 0) { %>
      <table class="table table-bordered table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach(article => { %>
            <tr>
              <td><%= article.title %></td>
              <td><%= new Date(article.postDate).toLocaleDateString() %></td>
              <td>
                <a href="/articles?category=<%= article.category %>">
                  <%= article.category %>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No articles found.</p>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    <div class="container">
      <p>Ankush Gauro, 108593237 <a href="mailto:agauro@myseneca.ca">agauro@myseneca.ca</a>. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
